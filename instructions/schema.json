{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ADF1 Instruction",
  "type": "object",
  "required": ["id", "action", "params"],
  "properties": {
    "id": { "type": "string" },
    "action": { "type": "string" },
    "params": { "type": "object" }
  }
}

"priority": {
  "type": "string",
  "enum": ["low", "medium", "high"]
},
"risk": {
  "type": "string",
  "enum": ["safe", "review", "critical"]
}

